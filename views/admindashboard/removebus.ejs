                        </select>
                    </div>
                    <label for="removeDate">Date of Journey(dd/mm/yyyy)</label>
                    <input  type="date" name="removeDate" required="true" id="removeDate">
                </div>



                <button class="book-button" id="remove-bus">Remove Bus</button>



            </div>

        </div>
    </div>
</div>


