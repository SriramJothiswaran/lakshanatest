<div class="container main-hero admin-login" ng-show="showDetails && !paymentInfo">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="hero-card">

                <div class="form-group">
                    <h3>Remove Bus</h3>

                    <hr>
                    <div class="form-group">
                        <label for="removeSource">From</label>
                        <select id="removeSource" name="removeSource">
