                            <option value="koyambedu">koyambedu</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="removeDestination">to</label>
                        <select id="removeDestination" name="removeDestination">
                            <option value="Elumalai">Elumalai</option>
