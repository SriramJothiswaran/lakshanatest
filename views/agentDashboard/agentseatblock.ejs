<script>
    $(function(){
        var $from = $('#from');
        var $to = $('#to');
        var $date = $('#date');
        var $username = $('#username');
        var $mobile = $('#mobile');
        var $id = $('#id');
        var $name = $('#name');


        $('#seat-block').on('click',function(){
            var data = {
                from : $from.val(),
                to : $to.val(),
                date : $date.val()
            };



            $.ajax({
                type:'POST',
                url:'/blocksearch',
                data:data,
                success:function(response){
                    $('#seat-block-final').prop('disabled', false)
                    if(response.length<36){
                        alert('no bus found');
                        location.reload();

                    }else{
                        response.sort(function(a, b) {
                            return parseInt(a.ticket[0].seatNumber) - parseInt(b.ticket[0].seatNumber);
                        });

                        for(i=1;i<=response.length;i++){
                            var labelid = "#label"+i;


                            if(response[i-1].ticket[0].reserved == false){
                                $(labelid ).removeClass("disabled-class");
                                $(labelid ).addClass("selected");
                            }




                            if(response[i-1].ticket[0].reserved == true){
                                $(labelid ).removeClass("disabled-class");
                                $(labelid ).addClass("admin-selected");
                            }
                        }


                    }
                },
                error: function(){
                    alert('Error occurred while searching buses !');
                    location.reload();
                }
            });


            var selectedSeats = [];

        });


        $('#seat-block-final').on('click',function(){
            var blockedSeats = [];
            for(i=1;i<=36;i++){
                var checkbox = "#asiento"+i;
                if($(checkbox).prop('checked')){
                    blockedSeats.push(i);
                }

                if(i == 36){
                    console.log(blockedSeats);
                    var data = {
                        blockedSeats:blockedSeats,
                        from : $from.val(),
                        to : $to.val(),
                        date : $date.val(),
                        username : $username.val(),
                        mobile : $mobile.val(),
                        id : $id.val(),
                        name : $name.val()

                    }
                    $.ajax({
                        type:'POST',
                        url:'/agentblock',
                        data:data,
                        success:function(){
                            alert('seat successfully blocked');
                            location.reload();

                        },
                        error: function(){
                            alert('error occured while blocking tickets !');
                            location.reload();
                        }



                    });
                }


            }

        });
    });
</script>

